<body>

    <div id="ui-layer">
        <div class="flex justify-between items-start">
            <div class="hud-border">
                <h1 class="text-2xl font-black tracking-widest glitch-text text-cyan-400">NEON_FLIGHT.v2</h1>
                <div class="flex items-center mt-1">
                    <div id="hand-status-dot" class="w-2 h-2 rounded-full bg-gray-600 mr-2 transition-all"></div>
                    <span id="hand-status-text" class="text-[10px] uppercase tracking-[0.2em] opacity-50">SYNCING_NEURAL_LINK...</span>
                </div>
            </div>
            <div class="text-right">
                <div class="text-5xl font-black italic tracking-tighter text-cyan-400" style="font-family: 'Orbitron'" id="score">00000</div>
                <div class="text-[10px] tracking-[0.3em] opacity-40 uppercase">Distance Matrix</div>
            </div>
        </div>
        
        <div class="flex justify-center mb-10">
            <div class="w-64 h-1 bg-white/10 rounded-full overflow-hidden">
                <div id="speed-bar" class="h-full bg-cyan-400 shadow-[0_0_15px_#00f2ff]" style="width: 20%"></div>
            </div>
        </div>
    </div>

    <div id="video-container">
        <div class="scanline"></div>
        <video id="webcam" autoplay playsinline></video>
    </div>

    <div id="overlay">
        <h2 class="text-6xl font-black mb-4 glitch-text italic">INITIALIZE</h2>
        <p class="mb-10 max-w-sm font-light text-cyan-200/60 leading-relaxed uppercase tracking-widest text-xs">
            Hand-tracking flight interface active.<br>Position palm in sensor range to engage.
        </p>
        <button id="start-btn" class="group relative px-12 py-4 overflow-hidden border border-cyan-500/50 rounded-sm">
            <span class="relative z-10 text-cyan-400 font-bold tracking-[0.5em] transition-colors group-hover:text-black">CONNECT</span>
            <div class="absolute inset-0 bg-cyan-400 translate-y-full transition-transform group-hover:translate-y-0"></div>
        </button>
        <div id="loading-msg" class="hidden mt-6 text-cyan-400 animate-pulse text-xs tracking-[0.3em]">LOADING_CORE_MODELS...</div>
    </div>

    <div id="game-over" class="hidden fixed inset-0 bg-black/90 z-[2000] flex flex-col items-center justify-center text-white">
        <h2 class="text-8xl font-black mb-2 italic glitch-text text-red-500 uppercase">System Failure</h2>
        <p id="final-score" class="text-xl mb-12 font-mono tracking-widest text-red-300"></p>
        <button onclick="location.reload()" class="px-12 py-3 border-2 border-red-500 text-red-500 font-bold uppercase tracking-widest hover:bg-red-500 hover:text-black transition-all">
            REBOOT_KERNEL
        </button>
    </div>

    <script>
        // --- CONFIG ---
        const config = {
            initialSpeed: 1.0,
            maxSpeed: 3.5,
            obstacleSpawnRate: 35,
            tunnelRadius: 16,
            shipSensitivity: 0.15,
            particleCount: 200
        };

        let gameState = {
            active: false,
            score: 0,
            handPos: { x: 0, y: 0 },
            hasHand: false,
            frame: 0,
            currentSpeed: config.initialSpeed
        };

        // --- THREE.JS ENGINE ---
        let scene, camera, renderer, ship, tunnel, obstacles = [], particles;
        
        function initThree() {
            scene = new THREE.Scene();
            scene.fog = new THREE.FogExp2(0x000000, 0.012);

            camera = new THREE.PerspectiveCamera(70, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.z = 8;

            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            document.body.appendChild(renderer.domElement);

            // Light Rig
            scene.add(new THREE.AmbientLight(0x404040, 0.5));
            const pLight = new THREE.PointLight(0x00f2ff, 5, 20);
            pLight.position.set(0, 0, 5);
            scene.add(pLight);

            // Modern Ship Design
            const shipGroup = new THREE.Group();
            const bodyMat = new THREE.MeshPhongMaterial({ color: 0x111111, specular: 0x00f2ff, shininess: 100 });
            const glowMat = new THREE.MeshBasicMaterial({ color: 0x00f2ff });

            const fuselage = new THREE.Mesh(new THREE.BoxGeometry(0.5, 0.2, 1.8), bodyMat);
            shipGroup.add(fuselage);

            const wingR = new THREE.Mesh(new THREE.BoxGeometry(1.4, 0.05, 0.6), bodyMat);
            wingR.position.x = 0.6;
            shipGroup.add(wingR);

            const wingL = wingR.clone();
            wingL.position.x = -0.6;
            shipGroup.add(wingL);

            // Engine Trail / Glow
            const engine = new THREE.Mesh(new THREE.BoxGeometry(0.4, 0.15, 0.1), glowMat);
            engine.position.z = 0.95;
            shipGroup.add(engine);

            ship = shipGroup;
            scene.add(ship);

            // Warp Particles
            initParticles();
            
            // Tunnel
            createTunnel();

            window.addEventListener('resize', onWindowResize, false);
        }

        function initParticles() {
            const geo = new THREE.BufferGeometry();
            const pos = new Float32Array(config.particleCount * 3);
            for(let i=0; i<config.particleCount*3; i++) pos[i] = (Math.random() - 0.5) * 100;
            geo.setAttribute('position', new THREE.BufferAttribute(pos, 3));
            const mat = new THREE.PointsMaterial({ color: 0x00f2ff, size: 0.1, transparent: true, opacity: 0.8 });
            particles = new THREE.Points(geo, mat);
            scene.add(particles);
        }

        function createTunnel() {
            const tunnelGeo = new THREE.CylinderGeometry(config.tunnelRadius, config.tunnelRadius, 1000, 8, 1, true);
            tunnelGeo.rotateX(Math.PI / 2);
            const tunnelMat = new THREE.MeshPhongMaterial({
                color: 0x00f2ff,
                wireframe: true,
                side: THREE.BackSide,
                transparent: true,
                opacity: 0.05
            });
            tunnel = new THREE.Mesh(tunnelGeo, tunnelMat);
            tunnel.position.z = -500;
            scene.add(tunnel);

            // Neon Pulse Rings
            for(let i=0; i<15; i++) {
                const ring = new THREE.Mesh(
                    new THREE.TorusGeometry(config.tunnelRadius, 0.05, 8, 64),
                    new THREE.MeshBasicMaterial({ color: 0x00f2ff, transparent: true, opacity: 0.2 })
                );
                ring.position.z = -i * 70;
                scene.add(ring);
            }
        }

        function spawnObstacle() {
            const type = Math.random();
            let geo;
            if(type > 0.5) {
                geo = new THREE.TorusGeometry(3 + Math.random() * 6, 0.3, 8, 24);
            } else {
                geo = new THREE.BoxGeometry(Math.random()*15 + 2, 0.5, 0.5);
            }

            const mat = new THREE.MeshStandardMaterial({ 
                color: 0xff0055, 
                emissive: 0xff0055, 
                emissiveIntensity: 3 
            });
            const obs = new THREE.Mesh(geo, mat);
            
            obs.position.x = (Math.random() - 0.5) * (config.tunnelRadius * 1.6);
            obs.position.y = (Math.random() - 0.5) * (config.tunnelRadius * 1.6);
            obs.position.z = -300;
            obs.rotation.set(Math.random()*Math.PI, Math.random()*Math.PI, 0);
            
            obstacles.push(obs);
            scene.add(obs);
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        // --- HAND TRACKING ---
        const videoElement = document.getElementById('webcam');
        const statusDot = document.getElementById('hand-status-dot');
        const statusText = document.getElementById('hand-status-text');

        function onResults(results) {
            if (results.multiHandLandmarks && results.multiHandLandmarks.length > 0) {
                gameState.hasHand = true;
                statusDot.style.background = '#00f2ff';
                statusDot.style.boxShadow = '0 0 10px #00f2ff';
                statusText.innerText = 'NEURAL_LINK_ESTABLISHED';
                
                const landmark = results.multiHandLandmarks[0][9];
                gameState.handPos.x = (0.5 - landmark.x) * 2; 
                gameState.handPos.y = (0.5 - landmark.y) * 2;
            } else {
                gameState.hasHand = false;
                statusDot.style.background = '#333';
                statusDot.style.boxShadow = 'none';
                statusText.innerText = 'LINK_INTERRUPTED_AUTO_PILOT';
                gameState.handPos.x *= 0.95;
                gameState.handPos.y *= 0.95;
            }
        }

        const hands = new Hands({ locateFile: (file) => `https://cdn.jsdelivr.net/npm/@mediapipe/hands/${file}` });
        hands.setOptions({ maxNumHands: 1, modelComplexity: 1, minDetectionConfidence: 0.6, minTrackingConfidence: 0.6 });
        hands.onResults(onResults);

        const cameraPipe = new Camera(videoElement, {
            onFrame: async () => { await hands.send({image: videoElement}); },
            width: 640, height: 480
        });

        // --- LOOP ---
        function animate() {
            if (!gameState.active) return;
            requestAnimationFrame(animate);

            gameState.frame++;
            
            // Speed progression
            gameState.currentSpeed = Math.min(config.maxSpeed, config.initialSpeed + (gameState.score / 15000));
            document.getElementById('speed-bar').style.width = `${(gameState.currentSpeed / config.maxSpeed) * 100}%`;

            // Movement Physics
            const targetX = gameState.handPos.x * 14;
            const targetY = gameState.handPos.y * 12;
            
            ship.position.x += (targetX - ship.position.x) * config.shipSensitivity;
            ship.position.y += (targetY - ship.position.y) * config.shipSensitivity;
            
            // Dynamic Rotation & Camera tilt
            ship.rotation.z = (ship.position.x - targetX) * 0.15;
            ship.rotation.x = (targetY - ship.position.y) * 0.15;
            ship.rotation.y = Math.sin(gameState.frame * 0.05) * 0.02;

            camera.rotation.z = ship.rotation.z * 0.2;
            camera.position.x = ship.position.x * 0.15;
            camera.position.y = ship.position.y * 0.15;

            // Particles Speed effect
            const positions = particles.geometry.attributes.position.array;
            for(let i=0; i<positions.length; i+=3) {
                positions[i+2] += gameState.currentSpeed * 2;
                if(positions[i+2] > 10) positions[i+2] = -100;
            }
            particles.geometry.attributes.position.needsUpdate = true;

            // Spawn Obstacles
            const spawnAdjusted = Math.max(15, config.obstacleSpawnRate - Math.floor(gameState.score / 2000));
            if (gameState.frame % spawnAdjusted === 0) spawnObstacle();

            // Obstacle logic
            for (let i = obstacles.length - 1; i >= 0; i--) {
                const obs = obstacles[i];
                obs.position.z += gameState.currentSpeed;
                obs.rotation.x += 0.01;
                obs.rotation.y += 0.01;

                // Hit Detection
                if (ship.position.distanceTo(obs.position) < 1.6) {
                    triggerShake();
                    gameOver();
                }

                if (obs.position.z > 15) {
                    scene.remove(obs);
                    obstacles.splice(i, 1);
                }
            }

            tunnel.rotation.z += 0.002;
            gameState.score += Math.floor(gameState.currentSpeed * 2);
            document.getElementById('score').innerText = gameState.score.toString().padStart(5, '0');

            renderer.render(scene, camera);
        }

        function triggerShake() {
            const intensity = 0.5;
            const duration = 500;
            const start = Date.now();
            
            const shake = () => {
                const elapsed = Date.now() - start;
                if(elapsed < duration) {
                    renderer.domElement.style.transform = `translate(${(Math.random()-0.5)*10}px, ${(Math.random()-0.5)*10}px)`;
                    requestAnimationFrame(shake);
                } else {
                    renderer.domElement.style.transform = 'none';
                }
            };
            shake();
        }

        function gameOver() {
            gameState.active = false;
            document.getElementById('game-over').classList.remove('hidden');
            document.getElementById('final-score').innerText = `DATA_RECOVERY: ${gameState.score} KM`;
        }

        document.getElementById('start-btn').addEventListener('click', async () => {
            document.getElementById('start-btn').classList.add('hidden');
            document.getElementById('loading-msg').classList.remove('hidden');

            try {
                await cameraPipe.start();
                initThree();
                gameState.active = true;
                document.getElementById('overlay').classList.add('hidden');
                animate();
            } catch (err) {
                document.getElementById('loading-msg').innerText = "ERROR: SENSOR_ACCESS_DENIED";
            }
        });
    </script>
</body>
</html>

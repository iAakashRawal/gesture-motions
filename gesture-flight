    <title>Neon Gesture Flight | Pro</title>
    <!-- MediaPipe Solutions -->
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/hands/hands.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js" crossorigin="anonymous"></script>
    <!-- Three.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;900&family=JetBrains+Mono:wght@300&display=swap');
        
        body { margin: 0; overflow: hidden; background-color: #000; font-family: 'JetBrains Mono', monospace; }
        
        /* Minimalist Scanner UI */
        #video-container {
            position: absolute;
            bottom: 30px;
            right: 30px;
            width: 140px;
            height: 100px;
            border: 1px solid rgba(0, 242, 255, 0.3);
            border-radius: 4px;
            overflow: hidden;
            z-index: 100;
            background: #000;
            transform: scaleX(-1);
            transition: opacity 0.5s ease;
        }
        #webcam { width: 100%; height: 100%; object-fit: cover; opacity: 0.6; filter: grayscale(1) contrast(1.2) brightness(1.5); }
        
        /* Scanline effect for the webcam */
        .scanline {
            width: 100%;
            height: 2px;
            background: rgba(0, 242, 255, 0.5);
            position: absolute;
            top: 0;
            left: 0;
            animation: scan 3s linear infinite;
            z-index: 101;
            pointer-events: none;
        }

        @keyframes scan {
            0% { top: 0; }
            100% { top: 100%; }
        }

        #ui-layer {
            position: absolute;
            inset: 0;
            padding: 2.5rem;
            pointer-events: none;
            color: #fff;
            z-index: 10;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .hud-border {
            border-left: 2px solid #00f2ff;
            padding-left: 15px;
        }

        #overlay {
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at center, rgba(0,20,30,0.85) 0%, #000 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            color: white;
            text-align: center;
        }

        .glitch-text {
            font-family: 'Orbitron', sans-serif;
            text-shadow: 0 0 20px rgba(0, 242, 255, 0.8);
        }

        #game-over {
            backdrop-filter: blur(10px);
        }
    </style>
